[flake8]
max-line-length = 120
extend-ignore = E203,W503,F401,E402,F841,W293,E501
exclude = 
    venv/,
    .git/,
    __pycache__/,
    *.pyc,
    .pytest_cache/,
    .coverage,
    .archive/,
    .mypy_cache/,
    .benchmarks/,
    htmlcov/,
    build/,
    dist/,
    *.egg-info/
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Test files can have unused imports and variables 
    tests/*:F401,E402,F841,W293
    # Test runner script
    run_tests.py:F841,W293