[flake8]
max-line-length = 88
extend-ignore = E203,W503
exclude = 
    venv/,
    .git/,
    __pycache__/,
    *.pyc,
    .pytest_cache/,
    .coverage,
    .archive/,
    .mypy_cache/,
    .benchmarks/,
    htmlcov/,
    build/,
    dist/,
    *.egg-info/
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401