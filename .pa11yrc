{
  "chromeLaunchConfig": {
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-accelerated-2d-canvas",
      "--no-first-run",
      "--no-zygote",
      "--single-process",
      "--disable-gpu"
    ]
  },
  "runners": [
    "htmlcs"
  ],
  "standard": "WCAG2AA",
  "timeout": 30000,
  "wait": 1000,
  "includeWarnings": true,
  "includeNotices": false,
  "ignore": [
    "WCAG2AA.Principle1.Guideline1_4.1_4_3.G18.Fail",
    "WCAG2AA.Principle1.Guideline1_4.1_4_3.G145.Fail"
  ],
  "hideElements": ".skip-accessibility",
  "rootElement": "body",
  "actions": [
    "wait for element #app to be visible"
  ],
  "screenCapture": "./pa11y-screenshot.png",
  "reporter": "cli",
  "threshold": 0
}