# EditorConfig for N-Dimensional Geometry Engine
# Ensures consistent coding styles across editors and IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx,json,yml,yaml}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false

[*.java]
indent_size = 4

[Makefile]
indent_style = tab

[*.{toml,cfg,ini}]
indent_size = 4

[docker-compose.yml]
indent_size = 2