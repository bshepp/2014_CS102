# Coverage configuration for GeometryOracle N-Dimensional Geometry Engine
# Controls what files are included/excluded from coverage analysis

[run]
# Source code directory
source = .

# Exclude patterns from coverage
omit = 
    # Test files themselves
    tests/*
    test_*
    *_test.py
    
    # Virtual environments
    venv/*
    env/*
    ENV/*
    .venv/*
    
    # Third-party and archived code
    .archive/*
    third_party/*
    vendor/*
    
    # MCP server deployment artifacts
    mcp-server/deploy/*
    
    # Build and distribution
    build/*
    dist/*
    *.egg-info/*
    
    # Configuration and setup files
    setup.py
    conftest.py
    
    # IDE and cache directories
    .vscode/*
    .idea/*
    __pycache__/*
    .mypy_cache/*
    .pytest_cache/*
    
    # Demo and example files
    demo*.py
    example*.py
    
    # Local development files
    local_*.py
    quickstart.py
    
    # AWS deployment artifacts
    amplify-web-app/*
    lambda-deployment/*
    
    # Temporary and log files
    *.tmp
    *.log
    
[report]
# Report configuration
exclude_lines =
    # Exclude pragma no cover
    pragma: no cover
    
    # Exclude debug code
    def __repr__
    if self\.debug
    
    # Exclude error handling that can't be tested
    raise AssertionError
    raise NotImplementedError
    
    # Exclude main execution blocks
    if __name__ == .__main__.:
    
    # Exclude abstract methods
    @abc.abstractmethod
    @abstractmethod
    
    # Exclude typing imports
    if TYPE_CHECKING:
    
    # Exclude development debugging
    logger\.debug
    print\(.*debug.*\)

# Report formatting
show_missing = True
precision = 2

[html]
# HTML report directory
directory = test-reports/coverage-unit

[xml]
# XML report file
output = test-reports/coverage.xml